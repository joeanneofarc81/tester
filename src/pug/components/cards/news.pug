mixin news-card(img, type, text)
  .news-card
    figure
      |
      |
      img(src=img alt="thumb")/
      |
      |
    .desc
      .text
        p.type.caption #{$t.movie_landing[type]}
        p #{text}
      |
      |
      a.btn.btn-small.btn-flat.waves-effect #{$t.movie_landing.news_readmore}
      |
      |
