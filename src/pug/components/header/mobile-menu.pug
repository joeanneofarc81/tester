#slide-menu.sidenav.mobile-nav
  .menu
    ul.collection
      each item, index in menu.movie
        li.collection-item(style="animation-duration: "+(Number(index + 1)) * 0.25 + 's')
          a.sidenav-close.waves-effect.menu-list(href='#' + item.name) #{$t.movie_landing['header_'+item.name]}
    hr.divider-sidebar
    ul.collection
      each item, index in ['login', 'register']
        li.collection-item(style="animation-duration: "+menu.movie.length * 0.25 + 's')
          a.sidenav-close.waves-effect.menu-list(href=item + ".html") #{$t.movie_landing['header_'+item]}